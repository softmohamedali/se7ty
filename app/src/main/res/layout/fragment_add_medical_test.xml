<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.body.user.AddMedicalTestFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_add_medical_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_bar"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/background_tool"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/add_medical_test"
                    android:textColor="@color/icon"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img_back"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.52" />

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#ffffff" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardViewf26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_bar"
                app:strokeColor="@color/background_tool"
                app:strokeWidth="0.5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/btn_close"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:text="@string/cancle"
                        android:textAlignment="center"
                        android:textColor="@color/background_tool"
                        android:textSize="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/btn_save"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_save"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/textVieSDw1e7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="@string/test_name"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ln1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/test_name"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/stroke_colormenu"
                        app:boxStrokeWidth="1dp"
                        app:counterTextColor="@color/background_tool"
                        app:layout_constraintEnd_toEndOf="@+id/textVieSDw1e7"
                        app:layout_constraintStart_toStartOf="@+id/textVieSDw1e7"
                        app:layout_constraintTop_toBottomOf="@+id/textVieSDw1e7">

                        <AutoCompleteTextView
                            android:id="@+id/mnue_test_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/lgdfsn2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/lap_name"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/ln1"
                        app:layout_constraintStart_toStartOf="@+id/ln1"
                        app:layout_constraintTop_toBottomOf="@+id/ln1" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ln2"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/lap_name"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/stroke_colormenu"
                        app:boxStrokeWidth="1dp"
                        app:counterTextColor="@color/background_tool"
                        app:layout_constraintEnd_toEndOf="@+id/lgdfsn2"
                        app:layout_constraintStart_toStartOf="@+id/lgdfsn2"
                        app:layout_constraintTop_toBottomOf="@+id/lgdfsn2">

                        <AutoCompleteTextView
                            android:id="@+id/mnue_lap_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/lggddfsn2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/test_date"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/ln2"
                        app:layout_constraintStart_toStartOf="@+id/ln2"
                        app:layout_constraintTop_toBottomOf="@+id/ln2" />

                    <EditText
                        android:id="@+id/et_date"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_text_testlip_back"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:padding="8dp"
                        android:text="@string/please_select_date"
                        app:layout_constraintEnd_toEndOf="@+id/lggddfsn2"
                        app:layout_constraintStart_toStartOf="@+id/lggddfsn2"
                        app:layout_constraintTop_toBottomOf="@+id/lggddfsn2" />

                    <TextView
                        android:id="@+id/lggddfdfsn2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/result"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/et_date"
                        app:layout_constraintStart_toStartOf="@+id/et_date"
                        app:layout_constraintTop_toBottomOf="@+id/et_date" />

                    <EditText
                        android:id="@+id/et_result"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/edit_text_testlip_back"
                        android:hint="@string/add_the_test_result"
                        android:padding="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/btn_select_img"
                        app:layout_constraintStart_toStartOf="@+id/lggddfdfsn2"
                        app:layout_constraintTop_toBottomOf="@+id/lggddfdfsn2" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_save"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/save"
                        android:textStyle="bold"
                        app:cornerRadius="20dp"
                        app:layout_constraintEnd_toEndOf="@+id/btn_select_img"
                        app:layout_constraintStart_toStartOf="@+id/et_result"
                        app:layout_constraintTop_toBottomOf="@+id/img_test" />

                    <ImageView
                        android:id="@+id/btn_select_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_stug"
                        app:layout_constraintBottom_toBottomOf="@+id/et_result"
                        app:layout_constraintEnd_toEndOf="@+id/lggddfdfsn2"
                        app:layout_constraintTop_toTopOf="@+id/et_result" />

                    <ImageView
                        android:id="@+id/img_test"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="12dp"
                        android:scaleType="centerCrop"

                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="@+id/btn_select_img"
                        app:layout_constraintHorizontal_bias="0.517"
                        app:layout_constraintStart_toStartOf="@+id/lggddfdfsn2"
                        app:layout_constraintTop_toBottomOf="@+id/et_result"
                        tools:src="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/img_close_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_close"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="@+id/img_test"
                        app:layout_constraintTop_toTopOf="@+id/img_test" />

                    <TextView
                        android:id="@+id/tv_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/delete_test"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/btn_close"
                        app:layout_constraintStart_toStartOf="@+id/btn_close"
                        app:layout_constraintTop_toBottomOf="@+id/btn_close" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/view_add_medical_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pb_addtest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp"
        app:strokeWidth="0.5dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        app:strokeColor="@color/background_tool"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_margin="16dp"
            />
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>